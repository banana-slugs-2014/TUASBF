<div class = 'survey-content'>
<h1><%= @survey.title %></h1>

<form action='/surveys/<%= @survey.id %>' method='post'>
<% @survey.questions.each do |question| %>

  <h2><%= question.text %><br></h4>

  <select name='response[<%= question.text %>]'>
  <% question.answers.each do |answer| %>
    <option value='<%= answer.content %>'><%= answer.content %></option>
  <% end %>
  </select>

<% end %>

<br /><br />
<button id='submit_survey' class="btn btn-lg btn-primary btn-block" type="submit" >Submit Survey</button>

</form>
</div>